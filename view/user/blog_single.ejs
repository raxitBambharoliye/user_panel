<%- include('user_header') %>
    <section class="page-heading wow fadeIn" data-wow-duration="1.5s"
        style="background-image: url(files/images/01-heading.jpg)">
        <div class="container">
            <div class="page-name">
                <h1>
                    <%= blog.title %>
                </h1>
                <span></span>
            </div>
        </div>
    </section>

    <section class="blog-single">
        <div class="container">
            <div class="row">
                <div class="col-md-8">
                    <div class="blog-single-item">
                        <img src="<%= blog.image %>" alt="">
                        <div class="blog-single-content">
                            <h3><a href="#">
                                    <%= blog.title %>
                                </a></h3>
                            <span><a href="#">
                                    <%= blog.name %>
                                </a> / <a href="#">
                                    <%= blog.date %>
                                </a> / <a href="#">
                                    <%= blog.category %>
                                </a></span>
                            <p>
                                <%= blog.content %>
                            </p>
                        </div>
                        <!-- NEXT PREVIOUS -->
                        <% var base=next; pre_base=next; %>
                        <div class="prev-btn col-md-6 col-sm-6 col-xs-6">
                            <% if(blogs_ids[--pre]){ %>
                                <a href="/user/blog_single/?id=<%= blogs_ids[pre]  %>"><i
                                        class="fa fa-angle-left"></i>Previous</a>
                                <% } %>

                        </div>
                        <div class="next-btn col-md-6 col-sm-6 col-xs-6">
                            <% if(blogs_ids[++next]){ %>
                                <a href="/user/blog_single/?id=<%= blogs_ids[next]  %>">Next<i
                                        class="fa fa-angle-right"></i></a>
                                <% } %>
                        </div>
                    </div>
                    <div class="blog-comments">
                        <h2>
                            <%= comment_count %> Comments
                        </h2>

                        <ul class="coments-content">

                            <% for(var co of comment) {%>
                                <% if( blog.id==co.post_id){ %>
                                    <li class="first-comment-item">
                                        <img src="<%= co.image %>" alt="">
                                        <span class="author-title"><a href="#">
                                                <%= co.name %>
                                            </a></span>
                                        <span class="comment-date">10 May 2015 / <a href="#">Reply</a>
                                        </span>
                                        <p>
                                            <%= co.comment %>
                                        </p>
                                    </li>
                                    <% } %>
                                        <% } %>
                        </ul>

                    </div>
                    <div class="submit-comment col-sm-12">
                        <h2>Leave A Comment</h2>
                        <form method="post" action="/comment/add_comment" enctype="multipart/form-data">
                            <input type="hidden" name="post_id" value="<%= blog.id %>" id="">
                            <!-- name -->
                            <div class=" col-md-12 col-sm-4 col-xs-6   " style="margin-bottom: 15px;">
                                <label for="" class="form-label">Name</label>
                                <input id="" type="text" class="form-control blog-search-field" name="name"
                                    placeholder="Your name...">
                            </div>
                            <!-- email -->
                            <div class="col-md-12 col-sm-4 col-xs-6  " style="margin-bottom: 15px;">
                                <label for="" class="form-label">Email</label>
                                <input type="text" class="form-control blog-search-field" name="email"
                                    placeholder="Your email...">
                            </div>
                            <!-- image -->
                            <div class="col-md-12 col-sm-4 col-xs-6  " style="margin-bottom: 15px;">
                                <label for="" class="form-label">Email</label>
                                <input type="file" class="form-control blog-search-field" name="image">
                            </div>
                            <!-- comment -->
                            <div class="col-md-12 col-sm-12">
                                <label for="" class="form-label">Comment</label>
                                <textarea id="message" class="input form-control" style="margin-bottom: 15px;"
                                    name="comment" placeholder="Comment..."></textarea>
                            </div>
                            <!-- submit -->
                            <div class="submit-coment col-md-12 ">
                                <button type="submit" class="btn btn-success" name="save">submit now</button>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="widget-item">
                        <h2>Search here</h2>
                        <div class="dec-line"></div>
                        <form method="get" id="blog-search" class="blog-search">
                            <input type="text" class="blog-search-field" name="s" placeholder="Type keyword..."
                                value="">
                        </form>
                    </div>
                    <div class="widget-item">
                        <h2>About Us</h2>
                        <div class="dec-line">
                        </div>
                        <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Similique earum quod iste, natus
                            quaerat facere a rem dolor sit amet, et placeat nemo.</p>
                        <div class="social-icons">
                            <ul>
                                <li><a href="#"><i class="fa fa-facebook"></i></a></li>
                                <li><a href="#"><i class="fa fa-twitter"></i></a></li>
                                <li><a href="#"><i class="fa fa-google-plus"></i></a></li>
                                <li><a href="#"><i class="fa fa-instagram"></i></a></li>
                                <li><a href="#"><i class="fa fa-rss"></i></a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="widget-item">
                        <h2>Recent Posts</h2>
                        <div class="dec-line"></div>

                        <ul class="recent-item">
                            <% for(var rb of resent){%>
                                <li class="recent-post-item" style="display: block;">
                                    <a href="/user/blog_single/?id=<%= rb   .id  %>">
                                        <img src="<%= rb.image %>" width="50" height="50" alt="">
                                        <span class="post-title">
                                            <%= rb.title %>
                                        </span>
                                    </a>
                                    <span class="post-info">
                                        <%= rb.date %>
                                    </span>
                                </li>
                                <% } %>
                        </ul>
                    </div>
                    <div class="widget-item">
                        <h2>From Flickr</h2>
                        <div class="dec-line"></div>
                        <div class="flickr-feed">
                            <ul class="flickr-images">
                                <% for(var ga of gallary){ %>
                                <li class="small-thumb"><a href="/user/blog_single/?id=<%= ga.id  %>" ><img src="<%= ga.image %>" alt="" /></a></li>
                                <% } %>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <%- include('user_footer') %>