<%- include('user_header') %>
    <section class="page-heading wow fadeIn" data-wow-duration="1.5s"
        style="background-image: url(files/images/01-heading.jpg)">
        <div class="container">
            <div class="page-name">
                <h1>Our Blog</h1>
                <span>Lovely layout of heading</span>
            </div>
        </div>
    </section>

    <section class="on-blog-grid">
        <div class="container">
            <div class="row">
                <% var i=1 ;for(var dt of blog) { %>
                            <div class="col-md-4">
                                <a href="blog-single.html"><img src="<%= dt.image %>" alt="" style="object-fit: cover;"
                                        height="200" width="300"></a>
                                <h3><a href="blog-single.html">
                                        <%= dt.title %>
                                    </a></h3>
                                <span><a href="#">
                                        <%= dt.name %>
                                    </a> / <a href="#">
                                        <%= dt.date %>
                                    </a> / <a href="#">
                                        <%= dt.category %>
                                    </a></span>
                                <p>
                                    <% var con=dt.content.substr(0,100) %>
                                        <%= con %>
                                </p>
                                <div class="read-more">
                                    <a href="/user/blog_single/?id=<%= dt.id %>">Read more</a>
                                </div>
                            </div>
                    <% i++ }%>
            </div>
            <div class="col-md-12">
                <div class="blog-page-nav text-center">
                    <ul>
                        <% var cp=cpage;var pre= --cp; %>
                        <% if(pre>0) {%>
                        <li><a href="?page=<%= pre %>"><i class="fa fa-angle-double-left"></i></a></li>
                        <% } %>
                        <% for(var i = 1;i<=2;i++){ %>
                            <li><a href="?page=<%= i%>" class="<% if(i==cpage ) {%><%= 'current' %><% } %>"><%= i %></a></li>
                        <% } %>
                        <% var next=++cpage %>
                        <% if(next<=page_num){ %>
                        <li><a href="?page=<%= next %>"><i class="fa fa-angle-double-right"></i></a></li>
                        <% } %>
                    </ul>
                </div>
            </div>
        </div>
    </section>
    <%- include('user_footer') %>   